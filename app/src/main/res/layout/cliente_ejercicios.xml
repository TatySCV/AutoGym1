<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:background="@drawable/fondo">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">
        <Spinner
            android:id="@+id/spn_filtroComplemento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#55000000"/>
        <Spinner
            android:id="@+id/spn_filtroMaquina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#55000000"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Filtrar por:"
        android:textAllCaps="true"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btn_filtrarComplemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/style_button2"
            android:layout_marginRight="50dp"
            android:text="   Complemento  "
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/btn_filtrarMaquina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/style_button2"
            android:text="   Maquina   "
            android:textColor="@color/black"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_limpiarFiltro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_button2"
        android:text="   Limpiar Filtro   "
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/lista_ejercicios"
        android:textAllCaps="true"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000">

        <ListView
            android:id="@+id/lvCliEjercicios"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/white"/>

    </LinearLayout>

</LinearLayout>